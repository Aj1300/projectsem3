<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Toll Name Input -->
    <EditText
        android:id="@+id/et_toll_name"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="100dp"
        android:hint="@string/enter_toll_name"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="24sp" />

    <!-- Vehicle Type Selection -->
    <RadioGroup
        android:id="@+id/rg_vehicle_type"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_two_three_wheeler"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:text="2,3  wheeler - ₹40"
            android:textColor="#000000"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/rb_four_wheeler"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:text=" 4   wheeler - ₹40"
            android:textColor="#000000"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/rb_six_wheeler"
            android:layout_width="358dp"
            android:layout_height="58dp"
            android:text=" 6   wheeler - ₹50"
            android:textColor="#000000"
            android:textSize="24sp" />
    </RadioGroup>

    <!-- Pay Button -->
    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#2196F3"
        android:text="Pay"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
</LinearLayout>